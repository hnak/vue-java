{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Java",
            "type": "java",
            "request": "launch",
            "stopOnEntry": true,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${workspaceRoot}/src/main/java",
            "startupClass": "jp.co.toiware.hobro.HobroApplication",
            "options": [
                "-jar",
                "${workspaceRoot}/build/libs/hobro-0.0.1-SNAPSHOT.jar"
            ],
            "externalConsole": true
        },
        {
            "name": "Java Remote",
            "type": "java",
            "request": "attach",
            "stopOnEntry": true,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${workspaceRoot}/src/main/java",
            "startupClass": "jp.co.toiware.hobro.HobroApplication",
            // "sourcePath": ["${workspaceRoot}/src/main/java"],
            "classpath": ["${workspaceRoot}/build/classes"],
            "remoteHost": "localhost",
            "remotePort": 5005,
            "externalConsole": true
        }
    ]
    
}